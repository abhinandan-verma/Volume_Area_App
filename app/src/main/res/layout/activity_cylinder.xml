<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrnd"
    tools:context=".Cylinder">

    <TextView
        android:id="@+id/cylinder_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cylinder Volume"
        android:textColor="#E403F8"
        android:textSize="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/cylinder_edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Base Radius"
        android:textColorHint="#F8CB04"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cylinder_text"
        app:layout_constraintVertical_bias="0.074" />

    <EditText
        android:id="@+id/cylinder_edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Height "
        android:textColor="#F8430A"
        android:textColorHint="#FB6900"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cylinder_edit1"
        app:layout_constraintVertical_bias="0.121" />

    <Button
        android:id="@+id/cylinder_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="Get Volume"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/cylinder_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cylinder_edit2"
        app:layout_constraintVertical_bias="0.435" />

    <TextView
        android:id="@+id/cylinder_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cylinder_edit2"
        app:layout_constraintVertical_bias="0.498" />


</androidx.constraintlayout.widget.ConstraintLayout>